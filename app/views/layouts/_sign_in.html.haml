.navbar-form.pull-right
  = form_for('user', :url => user_session_path) do |f| 
    = f.email_field :email, autofocus: true, placeholder: 'Email', class: "span3"
    = f.password_field :password, placeholder: 'Password', class: "span2"

    = f.submit "Sign in", class: "btn btn-success"
  .social-links.span3
    Or, Sign in with
    %span.social-icon
    = link_to "/auth/facebook", class: "facebook" do
      facebook
      %i.icon-facebook-circled