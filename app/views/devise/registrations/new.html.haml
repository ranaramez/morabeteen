Sign up
.container
  .row
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .alert.danger
        = devise_error_messages!

      .span5.centered
        .field
          = f.label :male
          = f.radio_button :gender, :male
          = f.label :female
          = f.radio_button :gender, :female
        .field
          = f.email_field :email, class: 'input', type: 'email', placeholder: 'Email'
        .field
          = f.password_field :password, class: 'input', type: 'password', placeholder: 'Password'
        .field
          = f.password_field :password_confirmation, class: 'input', type: 'password', placeholder: 'Password Confirmation'

        .btn.three-d.medium.green.right
          = f.submit "Sign up"
    = render "devise/shared/links"

