.container-fluid
  .row-fluid
    .span11.offset1
      %h2
        التسجيل
      %br

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|

        = devise_error_messages!

        .control-group
          %label.control-label اسم المستخدم
          .controls
            = f.text_field :username, class: 'input-large'

        .control-group
          %label.control-label كلمة المرور
          .controls
            = f.password_field :password, class: 'input-large'

        .control-group
          %label.control-label تأكيد كلمة المرور
          .controls
            = f.password_field :password_confirmation, class: 'input-large'

        .control-group
          %label.control-label النوع
          .controls
            .radio-btn
              = f.radio_button :gender, :male
              ذكر
            .radio-btn
              = f.radio_button :gender, :female
              أنثي

        .control-group
          .controls
            = f.submit "تسجيل", class: 'btn btn-success'
        .control-group
          .controls
            = render "devise/shared/links"

