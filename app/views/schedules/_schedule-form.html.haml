.control-group.schedule-fields
  .control-label.span2
    = t('common.start_date')
  .controls
    = select_date Date.today + 1, order: [:day, :month, :year], prefix: "start_date"
.control-group.schedule-fields
  .control-label.span2
    = t('common.end_date')
  .controls
    = select_date Date.today + 8, order: [:day, :month, :year], prefix: "end_date"
.row-fluid
  - schedule = Schedule.new
  = fields_for "schedules[#{schedule.id}]", schedule do |s|
    = render partial: "schedule-details", locals: {f: s}
    .add-task
      = link_to_add_schedule t('schedule.add_alternative'), s, schedule